@model PurrfectPair.Models.Pets
@{
    ViewData["Title"] = "Edit Pet Adoption";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/petadoption.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PurrfectPair.styles.css" asp-append-version="true" />
    <title>Purrfect Pair</title>
</head>
<body>
    <header>
        <nav class="navbg navbar navbar-expand-sm fixed-top">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/images/logo-dark.png" class="navlogo" alt="Logo" />
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <svg xmlns="http://www.w3.org/2000/svg" width="6" height="62" viewBox="0 0 6 62" fill="none">
                <path class="navline" d="M3 3V59" stroke="#038196" stroke-width="5" stroke-linecap="round" />
            </svg>
            <h1 class="navheader">Update Pet Adoption </h1>
        </nav>
    </header>

    <div class="container-fluid">
        <div class="row section-divider mx-auto">
            <div class="form-card">
                <form asp-controller="PetAdoption" asp-action="Index" method="post" asp-controller="Home" asp-action="Index">
                    <h3 class="form-title">
                        Update your details in adoption:
                    </h3>
                    <input asp-for="FirstName" class="form-field-short" placeholder="New First Name" />
                    <input asp-for="LastName" class="form-field-short" placeholder="New Last Name" /><br />
                    <input asp-for="ContactNumber" class="form-field-long" placeholder="New Contact Number" /><br />
                    <input asp-for="Email" class="form-field-long" placeholder="New Email" /><br />
                    <button type="submit" class="btn-submit">
                        SUBMIT
                    </button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
