@{
    ViewData["Title"] = "View Status";
}

@model List<PetSubmissionModel>

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/viewstatus.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PurrfectPair.styles.css" asp-append-version="true" />
    <title>Submit a Pet</title>
</head>
<body>
   <header>
        <!-- Navigation Bar -->
        <nav class="navbg navbar navbar-expand-sm fixed-top">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/images/logo-dark.png" class="navlogo" alt="Logo" />
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <svg xmlns="http://www.w3.org/2000/svg" width="6" height="62" viewBox="0 0 6 62" fill="none">
                <path class="navline" d="M3 3V59" stroke="#038196" stroke-width="5" stroke-linecap="round" />
            </svg>

            <h1 class="navheader">User Dashboard</h1>

            <div class="collapse navbar-collapse">
                <ul class="navtext navbar-nav ms-auto">
                    <li>
                        <a asp-area="SubmitPet" asp-controller="SubmitPet" asp-action="Index">
                            SUBMIT ADOPTION
                        </a>
                    </li>
                    <li>
                        <a asp-area="ViewStatus" asp-controller="ViewStatus" asp-action="Index">
                            VIEW STATUS
                        </a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li>
                        <button class="btn-logout nav-item">
                            <a class="btn-logout-text nav-link" asp-area="" asp-controller="" asp-action="">LOG OUT</a>
                        </button>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <div class="usercard container">
            <div class="row">
                <div class="col-3">
                    <img class="userimg" src="~/images/user-icon.png" alt="Profile Picture" />
                </div>
                <div class="col">
                    <p class="username">@ViewBag.User.FirstName @ViewBag.User.LastName</p>
                    <p class="useremail">@ViewBag.User.Email | @ViewBag.User.ContactNumber</p>
                    <p class="useremail">@ViewBag.User.Address</p>
                </div>
            </div>
        </div>
    </div>

    <div class="container justify-content-center">
    <div class="container-fluid">
        <h2 class="h2header">For Adoption</h2>
        <table class="table table-bordered databasetable" style="width: 77rem;">
            <thead>
                <tr>
                    <th scope="col">PET NAME</th>
                    <th scope="col">PET AGE</th>
                    <th scope="col">PET TYPE</th>
                    <th scope="col">PET GENDER</th>
                    <th scope="col">PET BREED</th>
                    <th scope="col">ADOPTING</th>
                    <th scope="col">ADOPTION</th>
                    <th scope="col">ACTIONS</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pet in Model)
                {
                    <tr>
                        <td>@pet.pet_name</td>
                        <td>@pet.pet_age</td>
                        <td>@pet.pet_type</td>
                        <td>@pet.pet_gender</td>
                        <td>@pet.pet_breed</td>
                        <td>@pet.pet_adopting</td>
                        <td>@pet.pet_adoption</td>
                        <td>
                            <button class="btn btn-danger" onclick="">Disable</button>
                                <a class="" asp-area="" asp-controller="UpdateSubmitPet" asp-action="UpdateSubmitPet">
                                <button class="btn-update" btn btn-primary">Update</button>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    </div>


    <div class="container justify-content-center">
    <div class="container-fluid">
        <h2 class="h2header">Adopting Pet</h2>
        <table class="table table-bordered databasetable" style="width: 77rem;">
            <thead>
                <tr>
                    <th scope="col">PET NAME</th>
                    <th scope="col">PET AGE</th>
                    <th scope="col">PET TYPE</th>
                    <th scope="col">PET GENDER</th>
                    <th scope="col">PET BREED</th>
                    <th scope="col">ADOPTING</th>
                    <th scope="col">ADOPTION</th>
                    <th scope="col">ACTIONS</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pet in Model)
                {
                    <tr>
                        <td>@pet.pet_name</td>
                        <td>@pet.pet_age</td>
                        <td>@pet.pet_type</td>
                        <td>@pet.pet_gender</td>
                        <td>@pet.pet_breed</td>
                        <td>@pet.pet_adopting</td>
                        <td>@pet.pet_adoption</td>
                        <td>
                            <button class="btn btn-danger" onclick="">Disable</button>
                                <a class="" asp-area="" asp-controller="UpdateSubmitPet" asp-action="UpdateSubmitPet">
                                    <button class="btn-update" onclick="">Update</button>
                                </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>